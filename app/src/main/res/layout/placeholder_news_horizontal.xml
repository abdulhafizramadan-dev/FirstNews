<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    tools:context=".carousel.NewsCarouselFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingVertical="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/placeholder_label"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@color/color_shimmer"
            android:paddingEnd="200dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraSmall" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/placeholder_content1"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:background="@color/color_shimmer"
            android:layout_marginTop="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/placeholder_label"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/placeholder_content2"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:background="@color/color_shimmer"
            app:cardUseCompatPadding="true"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintStart_toEndOf="@id/placeholder_content1"
            app:layout_constraintTop_toTopOf="@id/placeholder_content1"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/placeholder_content3"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:background="@color/color_shimmer"
            app:cardUseCompatPadding="true"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintStart_toEndOf="@id/placeholder_content2"
            app:layout_constraintTop_toTopOf="@id/placeholder_content2"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>